{
  "name": "node-ts-express-starter-kit",
  "version": "1.0.0",
  "description": "A boilerplate project to help you get started with node.js and typescript",
  "main": "out/index.js",
  "scripts": {
    "clean": "rimraf out coverage",
    "lint": "tslint src/**/*.ts",
    "build": "tsc -p .",
    "pretest": "yarn run build",
    "test": "yarn run lint && jest --coverage",
    "start": "node out/index.js",
    "watch:build": "yarn run build --watch",
    "watch:start": "nodemon --delay 2 --watch out out/index.js",
    "prewatch": "mkdirp out",
    "watch": "run-p watch:**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpinebreeze/node-ts-express-starter-kit.git"
  },
  "author": "Richard Adams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alpinebreeze/node-ts-express-starter-kit/issues"
  },
  "homepage": "https://github.com/alpinebreeze/node-ts-express-starter-kit#readme",
  "devDependencies": {
    "@types/express": "4.11.0",
    "@types/helmet": "0.0.37",
    "@types/jest": "22.0.1",
    "@types/minimist": "1.2.0",
    "@types/node": "8.5.8",
    "jest": "22.0.5",
    "mkdirp": "0.5.1",
    "nodemon": "1.14.10",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "express": "4.16.2",
    "helmet": "3.9.0",
    "minimist": "1.2.0"
  }
}
